{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes
{% endblock %}

{% block body %}
	<div>
		<table class="table">
			<thead>
				<tr>
					<th>{{ knp_pagination_sortable( recipes, 'Titre', 'r.title') }}</th>
					<th>{{ knp_pagination_sortable( recipes, 'Description', 'r.content') }}</th>
					<th>{{ knp_pagination_sortable( recipes, 'Dur√©e', 'r.duration') }}</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
					<tr>
						<td>
							<a href="{{ path('recipe.show', {'slug': recipe.slug, 'id': recipe.id}) }}">
								{{ recipe.title }}</a>
						</td>
						<td>{{ recipe.content }}</td>
						<td>{{ recipe.duration }}
							minutes</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>

		{{ knp_pagination_render(recipes) }}
	</div>
{% endblock %}
